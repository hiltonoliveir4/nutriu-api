{
  "compilerOptions": {
    "target": "ES2020", // Define a versão do ECMAScript
    "module": "commonjs", // Usa CommonJS para compatibilidade com Node.js
    "outDir": "./dist", // Pasta de saída dos arquivos compilados
    "rootDir": "./src", // Pasta raiz do código TypeScript
    "strict": true, // Habilita verificações rigorosas de tipo
    "esModuleInterop": true, // Permite a interoperabilidade entre CommonJS e ES Modules
    "skipLibCheck": true, // Ignora a verificação de tipos nas bibliotecas
    "forceConsistentCasingInFileNames": true // Garante consistência no uso de maiúsculas/minúsculas
  },
  "include": ["src/**/*"], // Inclui todos os arquivos na pasta src
  "exclude": ["node_modules"] //
}
